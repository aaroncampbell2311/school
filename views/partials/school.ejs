<html>
<head>
	<% include ./partials/head %>
</head>
<body>
	<header>
		<% include ./partials/header %>
	</header>
	<h1 class='center'>School Courses</h1>
	<hr />
	<div class='row'>
		<div class='col s12 m4'>
			<h3>Add Class</h3>
			<form action='/school' method='post'>
				<input type='text' name='name' placeholder='name' />
				<button class='btn btn-waves' type='submit'>Add</button>
			</form>
		</div>
	
	<table class='table col m8 s12'>
		<thead>
			<th>Class</th>
			<th></th>
		</thead>
		<tbody>
			<% school.forEach( function(school) { %>
			<% var href='/school/delete' + school %>
			<tr>
				<td><%= school %></td>
				<td><a href=<%= href %>></a>Delete</td>
			</tr>
			<% }); %>
		</tbody>
	</table>
 </div>
</body>
</html>